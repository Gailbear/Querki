# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /login                      controllers.Application.login
GET     /spaces                     controllers.Application.spaces
GET     /newSpace                   controllers.Application.newSpace
POST    /doNewSpace                 controllers.Application.doNewSpace

GET     /space/:spaceId/            controllers.Application.space(spaceId:String)
GET     /space/:spaceId/things      controllers.Application.things(spaceId:String)
GET     /space/:spaceId/createThing controllers.Application.createThing(spaceId)
POST    /space/:spaceId/createThing controllers.Application.doCreateThing(spaceId)

GET     /space/:spaceId/upload      controllers.Application.upload(spaceId)
POST    /space/:spaceId/upload      controllers.Application.doUpload(spaceId)

GET     /space/:spaceId/a/:attachmentId controllers.Application.attachment(spaceId, attachmentId)
GET     /u/:userName/:spaceName/a/:attachmentName controllers.Application.attachmentByName(userName, spaceName, attachmentName)
# Okay, this is officially a stupid way to do this. We should use ?cl instead, or something like that
GET     /ucl/:userName/:spaceName/a/:attachmentName controllers.Application.attachmentByName(userName, spaceName, attachmentName)

GET     /space/:spaceId/:thingId    controllers.Application.thing(spaceId:String, thingId:String)
GET     /space/:spaceId/:thingId/edit controllers.Application.editThing(spaceId, thingId)
POST    /space/:spaceId/:thingId/edit controllers.Application.doEditThing(spaceId, thingId)

GET     /u/:userName/               controllers.Application.userByName(userName)
GET     /u/:userName/:spaceName/    controllers.Application.spaceByName(userName, spaceName)
GET     /u/:userName/:spaceName/:thingName controllers.Application.thingByName(userName, spaceName, thingName, chromeless:Boolean = false) 
GET     /ucl/:userName/:spaceName/:thingName controllers.Application.thingByName(userName, spaceName, thingName, chromeless:Boolean = true) 

POST    /dologin                    controllers.Application.dologin
GET     /logout                     controllers.Application.logout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
